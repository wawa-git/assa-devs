application: watchmyperf
version: 1
runtime: python
api_version: 1

handlers:
- url: /style/images
  static_dir: static/images
  expiration: 1d
  
- url: /style
  static_dir: static

- url: /img
  static_dir: static/images
  expiration: 5m

- url: /js
  static_dir: static/js

- url: /favicon\.ico
  static_files: static/favicon.ico
  upload: static/favicon.ico
  expiration: 1d

- url: /robots\.txt
  static_files: static/robots.txt
  upload: static/robots.txt
  expiration: 7d

- url: /remote_api
  script: $PYTHON_LIB/google/appengine/ext/remote_api/handler.py
  login: admin

- url: /xd_receiver\.htm
  static_files: facebook/xd_receiver.htm
  upload: facebook/xd_receiver.htm

- url: /.*
  script: main.py
