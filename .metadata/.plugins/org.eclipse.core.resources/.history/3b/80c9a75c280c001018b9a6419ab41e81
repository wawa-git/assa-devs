		return null;
	}

	public IBusinessUnitDAO getBusinessUnitDAO() {
		return businessUnitDAO;
	}

	public void setBusinessUnitDAO(IBusinessUnitDAO pBusinessUnitDAO) {
		businessUnitDAO = pBusinessUnitDAO;
	}
}
